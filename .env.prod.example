# =============================================================================
# Farmer's Choice Logistics System - Production Environment Variables
# =============================================================================
# Copy this file to .env.prod and fill in the actual values
# NEVER commit .env.prod to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# PostgreSQL Database
# -----------------------------------------------------------------------------
POSTGRES_USER=fc_admin
POSTGRES_PASSWORD=<GENERATE_STRONG_PASSWORD_HERE>
POSTGRES_DB=farmers_choice_prod
POSTGRES_PORT=5432

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
APP_ENV=production
DEBUG=false
LOG_LEVEL=info
API_PORT=8000

# Security - Generate with: openssl rand -hex 32
SECRET_KEY=<GENERATE_64_CHAR_HEX_SECRET_HERE>

# CORS & Allowed Hosts
ALLOWED_HOSTS=api.farmerschoice.co.ke,localhost
CORS_ORIGINS=https://dashboard.farmerschoice.co.ke,https://admin.farmerschoice.co.ke

# -----------------------------------------------------------------------------
# Performance Tuning
# -----------------------------------------------------------------------------
WORKERS=4
MAX_CONNECTIONS=100

# -----------------------------------------------------------------------------
# Redis Cache
# -----------------------------------------------------------------------------
REDIS_PORT=6379

# -----------------------------------------------------------------------------
# Docker Image
# -----------------------------------------------------------------------------
IMAGE_TAG=latest
